include style

html 
    head 
        title People

body(class="flex flex-col bg-theme-blue-600 text-2xl min-h-screen")
    include ../partials/header

    div(class="flex-grow")
    div(class="grid place-items-center flex-grow gap-12")
        div(class="flex-grow place-items-center flex flex-col mx-auto max-w-7xl container px-4 lg:px-24")
            div(class="mt-12 flex-grow")
                div(class="flex flex-col items-center my-8 px-2 ")
                    a(href="/")
                    img(src="/reel.png" width="300" height="300")
                div(class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 xl:grid-cols-5 gap-4 overflow-y-scroll mb-4 scrollbar scrollbar-thin scrollbar-thumb-rounded scrollbar-track-theme-blue-500 scrollbar-thumb-blue-200")
                    each person in people
                        a(href=`/people/${person._id}` class="flex justify-center items-center bg-theme-blue-400 rounded h-32 w-48 text-theme-blue-600 text-center px-4") #{person.name}
        
        div(class="flex flex-row text-theme-white space-x-8")
            if current > 1
                -let url = "/people?page=" + (current-1)
                if qstring.length > 0
                    -url += "&" + qstring
                a(href=url class="hover:text-theme-blue-400 transition duration-500 ease-in-out") Previous
            - url = "/people?page=" + (current+1)
            if qstring.length > 0
                -url += "&" + qstring
            a(href=url class="hover:text-theme-blue-400 transition duration-500 ease-in-out") Next
    include ../partials/footer