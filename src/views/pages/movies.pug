include style

html 
    head 
        title Movie Database - Movie List 
body(class="bg-theme-blue-600 text-2xl text-theme-blue-100")  
    include ../partials/header
    div(class="flex flex-col place-items-center mx-auto max-w-7xl container px-4 lg:px-24")
        h2(class="my-12 text-theme-orange text-3xl") Results:
        div(class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-3 xl:grid-cols-4 gap-4 overflow-y-scroll mb-4 scrollbar scrollbar-thin scrollbar-thumb-rounded scrollbar-track-theme-blue-500 scrollbar-thumb-blue-200")
            each movie in movies
                a(href=`/movies/${movie._id}` class="flex flex-col justify-center items-center h-96 w-60 py-4 border border-theme-blue-300 rounded-md space-y-2 hover:border-theme-orange hover:text-theme-orange") 
                    img(src=movie.poster class="h-64 w-44")
                    span(class="text-center text-2xl") #{movie.title}
        div(class="flex  flex-row text-theme-white space-x-8")
            if current > 1
                -let url = "/movies?page=" + (current-1)
                if qstring.length > 0
                    -url += "&" + qstring
                a(href=url class="hover:text-theme-blue-400 transition duration-500 ease-in-out") Previous
            - url = "/movies?page=" + (current+1)
            if qstring.length > 0
                -url += "&" + qstring
            a(href=url class="hover:text-theme-blue-400 transition duration-500 ease-in-out") Next
    include ../partials/footer